<div class="col-md-3">
  <div class="user">
    <h1>User info</h1>
      <%= image_tag user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <td><strong>name</strong></td>
            <td><strong><%= user.name %></strong></td>
          </tr>
          <tr>
            <td><strong>introduction</strong></td>
            <td><strong><%= user.introduction %></strong></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user.id) do %>
          <button type="button" class="btn btn-outline-secondary btn-block my-5"><i class="fas fa-user-cog"></i></button>
        <% end%>
      </div>
  </div>

  <div class="new_book">
    <h1>New book</h1>
    <%= form_with model:book_new,url:books_path,method: :post do |f| %>
        <label for="title">Title</label></br >
        <%= f.text_field:title %></br >
        <label for="body">Opinion</label></br >
        <%= f.text_area:body %></br >
      <button class="btn btn-success mb-4" type="submit">Create Book</button>
    <% end %>
  </div>
</div>