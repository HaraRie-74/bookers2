<div class="user">
  <h1>User info</h1>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p>name <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <p><%= link_to "edit",edit_user_path(@user.id) %></p>
</div>

<div class="new_book">
  <h1>New Book</h1>
  <%= form_with model:@book,url:books_path,method: :post do |f| %>
    <label for="title">Title</label></br >
    <%= f.text_field:title %></br >
    <label for="body">Opinion</label></br >
    <%= f.text_area:body %></br >
    <%= f.submit "Create Book"%>
  <% end %>
</div>

<div class="Books">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>