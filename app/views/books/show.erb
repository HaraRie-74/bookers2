<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
<%= render 'users/list',user:@user,book_new:@book_new %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100,100) %></br >
        <%= link_to @book.user.name,user_path(@book.user_id) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user==current_user %>
        <td><%= link_to "Edit",edit_book_path %></td>
        <td><%= link_to "Destroy",book_path(@book.id),method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

</div>
</div>
</div>